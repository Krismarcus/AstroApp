<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Astrodaiva.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Astrodaiva.UI.Pages"
    xmlns:local="clr-namespace:Astrodaiva"
    Shell.FlyoutBehavior="Disabled"
    BackgroundColor="{StaticResource ShadedBackground}"
    Title="Astrodaiva">
    <ShellContent ContentTemplate="{DataTemplate pages:MainPage}" Route="main" />
    <ShellContent ContentTemplate="{DataTemplate pages:YearPage}" Route="year" />
</Shell>
