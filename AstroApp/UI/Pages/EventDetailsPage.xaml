<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AstroApp.UI.Pages.EventDetailsPage"
             xmlns:pages="clr-namespace:AstroApp.UI.Pages"
             xmlns:controls="clr-namespace:AstroApp.UI.Controls"
             xmlns:model="clr-namespace:AstroApp.Data.Models"
             xmlns:converters="clr-namespace:AstroApp.UI.Tools.Converters"
             x:DataType="model:AstroEvent"
             Title="EventDetailsPage">
    <ContentPage.Resources>
        <converters:EnumToImageConverter x:Key="EnumToImageConverter"/>        
        <converters:MoonDayIntToImageConverter x:Key="IntToImageConverter"/>
    </ContentPage.Resources>
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout >                
                <Button Text="Back" Clicked="OnPageTapped"/>
                <Label Text="{Binding Date.Day}" HorizontalOptions="CenterAndExpand" FontSize="50" FontAttributes="Bold" />
                <Label Text="{Binding Date, StringFormat='{0:MMMM}'}" HorizontalOptions="CenterAndExpand" />
                <Grid ColumnDefinitions="*,auto,*" Margin="20,0">
                    <Image Grid.Column="0" Source="{Binding MoonDay.PreviousMoonDay, Converter={StaticResource IntToImageConverter}}" HeightRequest="200" HorizontalOptions="Center"/>
                    <Label Grid.Column="1" Text="{Binding MoonDay.TransitionTime, StringFormat='{0:HH:mm}'}" HorizontalOptions="Center" VerticalOptions="End" FontSize="30" Margin="10,0"/>
                    <Image Grid.Column="2" Source="{Binding MoonDay.NewMoonDay, Converter={StaticResource IntToImageConverter}}" HeightRequest="200" HorizontalOptions="Center"/>                </Grid>
                <Grid ColumnDefinitions="*,*" Margin="60,0,60,-35">
                    <Label Grid.Column="0" Text="00:00" HorizontalOptions="Start" VerticalOptions="End"/>                    
                    <Label Grid.Column="1" Text="23:59" HorizontalOptions="End" VerticalOptions="End"/>
                </Grid>
                <Grid ColumnDefinitions="auto,*,auto">
                    <Label Grid.Column="0" Text="1" FontSize="60" Margin="10,0"/>
                    <Image Grid.Column="1" Source="line2.png" />
                    <Label Grid.Column="2" Text="2" FontSize="60" Margin="10,0"/>
                </Grid>
                <CollectionView ItemsSource="{Binding PlanetInZodiacs}" ItemsLayout="HorizontalList" Margin="0,-10" HorizontalOptions="Center">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <controls:EventDetailsPlanetInZodiacControl />
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Label Text="{Binding MoonDay.MoonDayInfo}"/>
                <Label Text="{Binding EventText}" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" FontAttributes="Bold" FontSize="18" Margin="20"/>
                <CollectionView ItemsSource="{Binding PlanetEvents}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <controls:CalendarPlanetEventControl />
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>