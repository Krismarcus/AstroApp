<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AstroApp.UI.Pages.EventDetailsPage"
             xmlns:pages="clr-namespace:AstroApp.UI.Pages"
             xmlns:controls="clr-namespace:AstroApp.UI.Controls"
             xmlns:model="clr-namespace:AstroApp.Data.Models"
             xmlns:converters="clr-namespace:AstroApp.UI.Tools.Converters"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             x:DataType="pages:EventDetailsPage"
             Title="EventDetailsPage">
    <ContentPage.Resources>
        <converters:EnumToImageConverter x:Key="EnumToImageConverter"/>        
        <converters:MoonDayIntToImageConverter x:Key="IntToImageConverter"/>
        <converters:DateTimeToTimeSpanConverter x:Key="DateTimeToTimeSpanConverter"/>
        <converters:ActivityQualityToColorConverter x:Key="ActivityQualityToColor"/>
        <converters:ActivityQualityToVisibilityConverter x:Key="ActivityQualityToVisibilityConverter"/>
        <converters:MoonPhaseImageToIntConverter x:Key="MoonPhaseImageToIntConverter"/>
    </ContentPage.Resources>
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout >
                <Button Text="Back" Clicked="OnPageTapped"/>
                <Grid HorizontalOptions="FillAndExpand" VerticalOptions="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>                    
                    <Label Grid.Column="1" Text="{Binding DayAstroEvent.Date.Day}" HorizontalOptions="Center" VerticalOptions="Center" FontSize="50" FontAttributes="Bold" />                    
                    <Image Grid.Column="2" Source="{Binding DayAstroEvent.MoonPhase, Converter={StaticResource MoonPhaseImageToIntConverter}}" HeightRequest="50" HorizontalOptions="Start" VerticalOptions="Center" Margin="-10,-25,-10,-10"/>
                </Grid>
                <Label Text="{Binding DayAstroEvent.Date, StringFormat='{0:MMMM}'}" HorizontalOptions="CenterAndExpand" />
                <Frame Padding="0" CornerRadius="20" BorderColor="Transparent" BackgroundColor="{StaticResource PrimaryBackground}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="10">
                    <Grid RowDefinitions="auto,auto">
                        <Grid Grid.Row="0" RowDefinitions="Auto,*">
                            <Grid Grid.Row="0">
                                <CarouselView x:Name="MoonDayCarousel" ItemsSource="{Binding MoonDaysCarousel}" IsSwipeEnabled="True" IsVisible="False">                                    
                                    <CarouselView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Padding="10">
                                                <Grid.GestureRecognizers>
                                                    <TapGestureRecognizer Tapped="MoonDayInfoConteinerRecognizer_Tapped"/>
                                                </Grid.GestureRecognizers>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="4*"/>
                                                </Grid.ColumnDefinitions>
                                                <Image x:DataType="model:MoonDaySlide" Source="{Binding MoonDay, Converter={StaticResource IntToImageConverter}}" Aspect="AspectFit" HeightRequest="100" HorizontalOptions="Center" VerticalOptions="Center" />
                                                <Label x:DataType="model:MoonDaySlide" Text="{Binding MoonDayInfo}" Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center" Margin="10"/>
                                            </Grid>
                                        </DataTemplate>
                                    </CarouselView.ItemTemplate>
                                </CarouselView>
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="1" HorizontalOptions="FillAndExpand" VerticalOptions="Center" Margin="20,40">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- The horizontal line -->
                            <Grid ColumnDefinitions="auto,*">
                                <Image x:Name="previousMoonDayMarker" Grid.Column="0" Source="{Binding DayAstroEvent.MoonDay.PreviousMoonDay, Converter={StaticResource IntToImageConverter}}" HeightRequest="40" VerticalOptions="Start">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="MoonDayRecognizer_Tapped"/>
                                    </Image.GestureRecognizers>
                                </Image>
                                <Line Grid.Column="1" Stroke="{StaticResource Primary}" X1="0" Y1="0" X2="{Binding Path=Width, Source={RelativeSource Self}}" Y2="0" StrokeThickness="5" StrokeLineCap="Square" VerticalOptions="End"/>
                            </Grid>

                            <!-- The marker, assuming you'll position it dynamically in code-behind -->
                            <AbsoluteLayout x:Name="layout" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                <!-- Marker -->
                                <Image x:Name="newMoonDayMarker" Source="{Binding DayAstroEvent.MoonDay.NewMoonDay, Converter={StaticResource IntToImageConverter}}" HeightRequest="40" VerticalOptions="Start">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="MoonDayRecognizer_Tapped"/>
                                    </Image.GestureRecognizers>
                                </Image>
                                <!-- Time Label -->
                                <Label x:Name="timeLabel" Text="00:00" AbsoluteLayout.LayoutBounds="0, 0, AutoSize, AutoSize" AbsoluteLayout.LayoutFlags="PositionProportional" IsVisible="False"/>
                                <Image x:Name="middleMoonDayMarker" Source="{Binding DayAstroEvent.MoonDay.MiddleMoonDay, Converter={StaticResource IntToImageConverter}}" HeightRequest="40" IsVisible="{Binding DayAstroEvent.MoonDay.IsTripleMoonDay}">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="MoonDayRecognizer_Tapped"/>
                                    </Image.GestureRecognizers>
                                </Image>
                                <!-- Second label for the middle moon day time -->
                                <Label x:Name="secondTimeLabel" Text="00:00" AbsoluteLayout.LayoutBounds="0, 0, AutoSize, AutoSize" AbsoluteLayout.LayoutFlags="PositionProportional" IsVisible="False"/>
                            </AbsoluteLayout>
                        </Grid>
                    </Grid>
                </Frame>
                <Frame Padding="0" CornerRadius="20" BorderColor="Transparent" BackgroundColor="{StaticResource PrimaryBackground}" 
       HorizontalOptions="FillAndExpand" 
       VerticalOptions="FillAndExpand" 
       Margin="10" 
       HasShadow="True">
                    <Grid RowDefinitions="*,*">
                        <Grid Grid.Row="0" ColumnDefinitions="*,*">
                            <Grid ColumnDefinitions="*,*" Grid.Column="0">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="TapSunInZodiac_Tapped"/>
                                </Grid.GestureRecognizers>
                                <Image Grid.Column="0" Source="sun.png" Margin="-20,-50,-50,-50"/>
                                <Image Grid.Column="1" Source="{Binding DayAstroEvent.SunInZodiac.NewZodiacSign, Converter={StaticResource EnumToImageConverter}}" Margin="-50,-50,-20,-50"/>
                            </Grid>
                            <Grid Grid.Column="1" ColumnDefinitions="*,*"  HorizontalOptions="Center" VerticalOptions="Center">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="TapMoonInZodiac_Tapped"/>
                                </Grid.GestureRecognizers>
                                <Image Grid.Column="0" Source="moon.png" Margin="-50,-50,-70,-50 "/>
                                <Grid Grid.Column="1">
                                    <VerticalStackLayout>
                                        <Image Source="{Binding DayAstroEvent.MoonInZodiac.PreviousZodiacSign, Converter={StaticResource EnumToImageConverter}}" HorizontalOptions="Center" VerticalOptions="Center" IsVisible="{Binding DayAstroEvent.MoonInZodiac.IsZodiacTransitioning}"/>
                                        <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                            <Label Text="{Binding DayAstroEvent.MoonInZodiac.TransitionTime, Converter={StaticResource DateTimeToTimeSpanConverter}}" IsVisible="{Binding DayAstroEvent.MoonInZodiac.IsZodiacTransitioning}" HorizontalOptions="Center" VerticalOptions="Center"/>
                                            <Image Source="arrow.png" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="30" IsVisible="{Binding DayAstroEvent.MoonInZodiac.IsZodiacTransitioning}" />
                                        </HorizontalStackLayout>
                                        <Image Source="{Binding DayAstroEvent.MoonInZodiac.NewZodiacSign, Converter={StaticResource EnumToImageConverter}}" HorizontalOptions="Center" VerticalOptions="Center"  />
                                    </VerticalStackLayout>
                                </Grid>
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="1" ColumnDefinitions="*,*,*">
                            <Grid Grid.Column="0" ColumnDefinitions="*,*"  HorizontalOptions="Center" VerticalOptions="Center">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="TapVenusInZodiac_Tapped"/>
                                </Grid.GestureRecognizers>
                                <Image Grid.Column="0" Source="venus.png" Margin="-50,-50,-70,-50 "/>
                                <Grid Grid.Column="1">
                                    <Grid >
                                        <VerticalStackLayout>
                                            <Image Source="{Binding DayAstroEvent.VenusInZodiac.PreviousZodiacSign, Converter={StaticResource EnumToImageConverter}}" HorizontalOptions="Center" VerticalOptions="Center" IsVisible="{Binding DayAstroEvent.VenusInZodiac.IsZodiacTransitioning}"/>
                                            <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                                <Label Text="{Binding DayAstroEvent.VenusInZodiac.TransitionTime, Converter={StaticResource DateTimeToTimeSpanConverter}}" IsVisible="{Binding DayAstroEvent.VenusInZodiac.IsZodiacTransitioning}" HorizontalOptions="Center" VerticalOptions="Center"/>
                                                <Image Source="arrow.png" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="30" IsVisible="{Binding DayAstroEvent.VenusInZodiac.IsZodiacTransitioning}" />
                                            </HorizontalStackLayout>
                                            <Image Source="{Binding DayAstroEvent.VenusInZodiac.NewZodiacSign, Converter={StaticResource EnumToImageConverter}}" HorizontalOptions="Center" VerticalOptions="Center"  />
                                        </VerticalStackLayout>
                                    </Grid>
                                </Grid>
                            </Grid>
                            <Grid Grid.Column="1" ColumnDefinitions="*,*"  HorizontalOptions="Center" VerticalOptions="Center">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="TapMarsInZodiac_Tapped"/>
                                </Grid.GestureRecognizers>
                                <Image Grid.Column="0" Source="mars.png" Margin="-50,-50,-70,-50 "/>
                                <Grid Grid.Column="1">
                                    <Grid >
                                        <VerticalStackLayout>
                                            <Image Source="{Binding DayAstroEvent.MarsInZodiac.PreviousZodiacSign, Converter={StaticResource EnumToImageConverter}}" HorizontalOptions="Center" VerticalOptions="Center" IsVisible="{Binding DayAstroEvent.MarsInZodiac.IsZodiacTransitioning}"/>
                                            <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                                <Label Text="{Binding DayAstroEvent.MarsInZodiac.TransitionTime, Converter={StaticResource DateTimeToTimeSpanConverter}}" IsVisible="{Binding DayAstroEvent.MarsInZodiac.IsZodiacTransitioning}" HorizontalOptions="Center" VerticalOptions="Center"/>
                                                <Image Source="arrow.png" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="30" IsVisible="{Binding DayAstroEvent.MarsInZodiac.IsZodiacTransitioning}" />
                                            </HorizontalStackLayout>
                                            <Image Source="{Binding DayAstroEvent.MarsInZodiac.NewZodiacSign, Converter={StaticResource EnumToImageConverter}}" HorizontalOptions="Center" VerticalOptions="Center"  />
                                        </VerticalStackLayout>
                                    </Grid>
                                </Grid>
                            </Grid>
                            <Grid Grid.Column="2" ColumnDefinitions="*,*"  HorizontalOptions="Center" VerticalOptions="Center">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="TapMercuryInZodiac_Tapped"/>
                                </Grid.GestureRecognizers>
                                <Image Grid.Column="0" Source="mercury.png" Margin="-50,-50,-70,-50 "/>
                                <Grid Grid.Column="1">
                                    <Grid >
                                        <VerticalStackLayout>
                                            <Image Source="{Binding DayAstroEvent.MercuryInZodiac.PreviousZodiacSign, Converter={StaticResource EnumToImageConverter}}" HorizontalOptions="Center" VerticalOptions="Center" IsVisible="{Binding DayAstroEvent.MercuryInZodiac.IsZodiacTransitioning}"/>
                                            <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                                <Label Text="{Binding DayAstroEvent.MercuryInZodiac.TransitionTime, Converter={StaticResource DateTimeToTimeSpanConverter}}" IsVisible="{Binding DayAstroEvent.MercuryInZodiac.IsZodiacTransitioning}" HorizontalOptions="Center" VerticalOptions="Center"/>
                                                <Image Source="arrow.png" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="30" IsVisible="{Binding DayAstroEvent.MercuryInZodiac.IsZodiacTransitioning}" />
                                            </HorizontalStackLayout>
                                            <Image Source="{Binding DayAstroEvent.MercuryInZodiac.NewZodiacSign, Converter={StaticResource EnumToImageConverter}}" HorizontalOptions="Center" VerticalOptions="Center"  />
                                        </VerticalStackLayout>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                </Frame>
                <Label Text="{Binding DayAstroEvent.EventText}" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" FontAttributes="Bold" FontSize="18" Margin="20"/>                
                <CollectionView ItemsSource="{Binding DayAstroEvent.PlanetEvents}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <controls:CalendarPlanetEventControl />
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <HorizontalStackLayout >
                    <Image Source="plant.png" Background="{Binding DayAstroEvent.Gardening, Converter={StaticResource ActivityQualityToColor}}" IsVisible="{Binding DayAstroEvent.Gardening, Converter={StaticResource ActivityQualityToVisibilityConverter}}" HeightRequest="30"/>
                    <Image Source="love.png" Background="{Binding DayAstroEvent.Love, Converter={StaticResource ActivityQualityToColor}}" IsVisible="{Binding DayAstroEvent.Love, Converter={StaticResource ActivityQualityToVisibilityConverter}}" HeightRequest="30"/>
                    <Image Source="tech.png" Background="{Binding DayAstroEvent.Tech, Converter={StaticResource ActivityQualityToColor}}" IsVisible="{Binding DayAstroEvent.Tech, Converter={StaticResource ActivityQualityToVisibilityConverter}}" HeightRequest="30"/>
                    <Image Source="ideas.png" Background="{Binding DayAstroEvent.Ideas, Converter={StaticResource ActivityQualityToColor}}" IsVisible="{Binding DayAstroEvent.Ideas, Converter={StaticResource ActivityQualityToVisibilityConverter}}" HeightRequest="30"/>
                    <Image Source="buystuff.png" Background="{Binding DayAstroEvent.Buystuff, Converter={StaticResource ActivityQualityToColor}}" IsVisible="{Binding DayAstroEvent.Buystuff, Converter={StaticResource ActivityQualityToVisibilityConverter}}" HeightRequest="30"/>                    
                </HorizontalStackLayout>                
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>