<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AstroApp.UI.Pages.EventDetailsPage"
             xmlns:pages="clr-namespace:AstroApp.UI.Pages"
             xmlns:controls="clr-namespace:AstroApp.UI.Controls"
             xmlns:model="clr-namespace:AstroApp.Data.Models"
             xmlns:converters="clr-namespace:AstroApp.UI.Tools.Converters"
             x:DataType="pages:EventDetailsPage"
             Title="EventDetailsPage">
    <ContentPage.Resources>
        <converters:EnumToImageConverter x:Key="EnumToImageConverter"/>        
        <converters:MoonDayIntToImageConverter x:Key="IntToImageConverter"/>
        <converters:DateTimeToTimeSpanConverter x:Key="DateTimeToTimeSpanConverter"/>
    </ContentPage.Resources>
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout >                
                <Button Text="Back" Clicked="OnPageTapped"/>
                <Label Text="{Binding DayAstroEvent.Date.Day}" HorizontalOptions="CenterAndExpand" FontSize="50" FontAttributes="Bold" />
                <Label Text="{Binding DayAstroEvent.Date, StringFormat='{0:MMMM}'}" HorizontalOptions="CenterAndExpand" />
                <Grid ColumnDefinitions="*,auto,*" Margin="20,0">
                    <Image Grid.Column="0" Source="{Binding DayAstroEvent.MoonDay.PreviousMoonDay, Converter={StaticResource IntToImageConverter}}" HeightRequest="200" HorizontalOptions="Center">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapPreviousMoonDay_Tapped"/>
                        </Image.GestureRecognizers>
                    </Image>
                    <Label Grid.Column="1" Text="{Binding DayAstroEvent.MoonDay.TransitionTime, StringFormat='{0:HH:mm}'}" HorizontalOptions="Center" VerticalOptions="End" FontSize="30" Margin="10,0"/>
                    <Image Grid.Column="2" Source="{Binding DayAstroEvent.MoonDay.NewMoonDay, Converter={StaticResource IntToImageConverter}}" HeightRequest="200" HorizontalOptions="Center">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapNewMoonDay_Tapped"/>
                        </Image.GestureRecognizers>
                    </Image>
                </Grid>
                <Grid ColumnDefinitions="*,*" Margin="60,0,60,-35">
                    <Label Grid.Column="0" Text="00:00" HorizontalOptions="Start" VerticalOptions="End"/>                    
                    <Label Grid.Column="1" Text="23:59" HorizontalOptions="End" VerticalOptions="End"/>
                </Grid>
                <Grid ColumnDefinitions="auto,*,auto">
                    <Label Grid.Column="0" Text="1" FontSize="60" Margin="10,0"/>
                    <Image Grid.Column="1" Source="line2.png" />
                    <Label Grid.Column="2" Text="2" FontSize="60" Margin="10,0"/>
                </Grid>
                <Grid ColumnDefinitions="*,*">
                    <Grid Grid.Column="0" ColumnDefinitions="*,*">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapSunInZodiac_Tapped"/>
                        </Grid.GestureRecognizers>
                        <Image Grid.Column="0" Source="sun.png" Margin="-20,-50,-50,-50"/>
                        <Image Grid.Column="1" Source="{Binding DayAstroEvent.SunInZodiac.NewZodiacSign, Converter={StaticResource EnumToImageConverter}}" Margin="-50,-50,-20,-50"/>
                    </Grid>
                    <Grid Grid.Column="1" ColumnDefinitions="*,*"  HorizontalOptions="Center" VerticalOptions="Center">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapMoonInZodiac_Tapped"/>
                        </Grid.GestureRecognizers>
                        <Image Grid.Column="0" Source="moon.png" Margin="-50,-50,-70,-50 "/>
                        <Grid Grid.Column="1">
                            <Grid >
                                <VerticalStackLayout>
                                    <Image Source="{Binding DayAstroEvent.MoonInZodiac.PreviousZodiacSign, Converter={StaticResource EnumToImageConverter}}" HorizontalOptions="Center" VerticalOptions="Center" IsVisible="{Binding DayAstroEvent.MoonInZodiac.IsZodiacTransitioning}"/>
                                    <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                        <Label Text="{Binding DayAstroEvent.MoonInZodiac.TransitionTime, Converter={StaticResource DateTimeToTimeSpanConverter}}" IsVisible="{Binding DayAstroEvent.MoonInZodiac.IsZodiacTransitioning}" HorizontalOptions="Center" VerticalOptions="Center"/>
                                        <Image Source="arrow.png" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="30" IsVisible="{Binding DayAstroEvent.MoonInZodiac.IsZodiacTransitioning}" />
                                    </HorizontalStackLayout>
                                    <Image Source="{Binding DayAstroEvent.MoonInZodiac.NewZodiacSign, Converter={StaticResource EnumToImageConverter}}" HorizontalOptions="Center" VerticalOptions="Center"  />
                                </VerticalStackLayout>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
                <Grid ColumnDefinitions="*,*,*">
                    <Grid Grid.Column="0" ColumnDefinitions="*,*"  HorizontalOptions="Center" VerticalOptions="Center">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapVenusInZodiac_Tapped"/>
                        </Grid.GestureRecognizers>
                        <Image Grid.Column="0" Source="venus.png" Margin="-50,-50,-70,-50 "/>
                        <Grid Grid.Column="1">
                            <Grid >
                                <VerticalStackLayout>
                                    <Image Source="{Binding DayAstroEvent.VenusInZodiac.PreviousZodiacSign, Converter={StaticResource EnumToImageConverter}}" HorizontalOptions="Center" VerticalOptions="Center" IsVisible="{Binding DayAstroEvent.VenusInZodiac.IsZodiacTransitioning}"/>
                                    <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                        <Label Text="{Binding DayAstroEvent.VenusInZodiac.TransitionTime, Converter={StaticResource DateTimeToTimeSpanConverter}}" IsVisible="{Binding DayAstroEvent.VenusInZodiac.IsZodiacTransitioning}" HorizontalOptions="Center" VerticalOptions="Center"/>
                                        <Image Source="arrow.png" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="30" IsVisible="{Binding DayAstroEvent.VenusInZodiac.IsZodiacTransitioning}" />
                                    </HorizontalStackLayout>
                                    <Image Source="{Binding DayAstroEvent.VenusInZodiac.NewZodiacSign, Converter={StaticResource EnumToImageConverter}}" HorizontalOptions="Center" VerticalOptions="Center"  />
                                </VerticalStackLayout>
                            </Grid>
                        </Grid>
                    </Grid>
                    <Grid Grid.Column="1" ColumnDefinitions="*,*"  HorizontalOptions="Center" VerticalOptions="Center">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapMarsInZodiac_Tapped"/>
                        </Grid.GestureRecognizers>
                        <Image Grid.Column="0" Source="mars.png" Margin="-50,-50,-70,-50 "/>
                        <Grid Grid.Column="1">
                            <Grid >
                                <VerticalStackLayout>
                                    <Image Source="{Binding DayAstroEvent.MarsInZodiac.PreviousZodiacSign, Converter={StaticResource EnumToImageConverter}}" HorizontalOptions="Center" VerticalOptions="Center" IsVisible="{Binding DayAstroEvent.MarsInZodiac.IsZodiacTransitioning}"/>
                                    <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                        <Label Text="{Binding DayAstroEvent.MarsInZodiac.TransitionTime, Converter={StaticResource DateTimeToTimeSpanConverter}}" IsVisible="{Binding DayAstroEvent.MarsInZodiac.IsZodiacTransitioning}" HorizontalOptions="Center" VerticalOptions="Center"/>
                                        <Image Source="arrow.png" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="30" IsVisible="{Binding DayAstroEvent.MarsInZodiac.IsZodiacTransitioning}" />
                                    </HorizontalStackLayout>
                                    <Image Source="{Binding DayAstroEvent.MarsInZodiac.NewZodiacSign, Converter={StaticResource EnumToImageConverter}}" HorizontalOptions="Center" VerticalOptions="Center"  />
                                </VerticalStackLayout>
                            </Grid>
                        </Grid>
                    </Grid>
                    <Grid Grid.Column="2" ColumnDefinitions="*,*"  HorizontalOptions="Center" VerticalOptions="Center">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapMercuryInZodiac_Tapped"/>
                        </Grid.GestureRecognizers>
                        <Image Grid.Column="0" Source="mercury.png" Margin="-50,-50,-70,-50 "/>
                        <Grid Grid.Column="1">
                            <Grid >
                                <VerticalStackLayout>
                                    <Image Source="{Binding DayAstroEvent.MercuryInZodiac.PreviousZodiacSign, Converter={StaticResource EnumToImageConverter}}" HorizontalOptions="Center" VerticalOptions="Center" IsVisible="{Binding DayAstroEvent.MercuryInZodiac.IsZodiacTransitioning}"/>
                                    <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                        <Label Text="{Binding DayAstroEvent.MercuryInZodiac.TransitionTime, Converter={StaticResource DateTimeToTimeSpanConverter}}" IsVisible="{Binding DayAstroEvent.MercuryInZodiac.IsZodiacTransitioning}" HorizontalOptions="Center" VerticalOptions="Center"/>
                                        <Image Source="arrow.png" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="30" IsVisible="{Binding DayAstroEvent.MercuryInZodiac.IsZodiacTransitioning}" />
                                    </HorizontalStackLayout>
                                    <Image Source="{Binding DayAstroEvent.MercuryInZodiac.NewZodiacSign, Converter={StaticResource EnumToImageConverter}}" HorizontalOptions="Center" VerticalOptions="Center"  />
                                </VerticalStackLayout>
                            </Grid>
                        </Grid>
                    </Grid>

                </Grid>
                    <Label Text="{Binding DayAstroEvent.EventText}" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" FontAttributes="Bold" FontSize="18" Margin="20"/>
                <CollectionView ItemsSource="{Binding DayAstroEvent.PlanetEvents}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <controls:CalendarPlanetEventControl />
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>