<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AstroApp.UI.Pages.YearPage"
             xmlns:pages="clr-namespace:AstroApp.UI.Pages"
             xmlns:models="clr-namespace:AstroApp.Data.Models"
             xmlns:controls="clr-namespace:AstroApp.UI.Controls"
             xmlns:converters="clr-namespace:AstroApp.UI.Tools.Converters"
             x:DataType="pages:YearPage"
             Title="YearPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:ZodiacToColorConverter x:Key="ZodiacToColor"/>
            <converters:DurationToWidthConverter x:Key="DurationToWidthConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ScrollView>
        <VerticalStackLayout>            
            <controls:CustomZodiacLineView ZodiacSegments="{Binding SunInZodiacSegments}"/>
            <controls:CustomZodiacLineView ZodiacSegments="{Binding MercuryInZodiacSegments}"/>
            <controls:CustomZodiacLineView ZodiacSegments="{Binding VenusInZodiacSegments}"/>
            <controls:CustomZodiacLineView ZodiacSegments="{Binding MarsInZodiacSegments}"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>