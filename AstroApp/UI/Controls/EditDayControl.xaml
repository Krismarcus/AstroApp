<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AstroApp.UI.Controls.EditDayControl"
             xmlns:controls="clr-namespace:AstroApp.UI.Controls"
             xmlns:converters="clr-namespace:AstroApp.UI.Tools.Converters"
             x:DataType="controls:EditDayControl">
    <ContentView.Resources>
        <converters:EnumToStringConverter x:Key="EnumConverter"/>
        <converters:MoonDayIntToStringConverter x:Key="IntToStringConverter"/>
        <converters:DateTimeToTimeSpanConverter x:Key="DateTimeToTimeSpanConverter"/>
    </ContentView.Resources>
    <Border>
        <VerticalStackLayout>
            <Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Text="{Binding DayAstroEvent.Date.Day}" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Padding="5"/>
                        <Grid Grid.Column="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" Text="Sun In Zodiac" HorizontalOptions="Center" VerticalOptions="Center"/>
                            
                            <Picker Grid.Row="1" x:Name="SunInZodiacPicker" SelectedItem="{Binding DayAstroEvent.SunInZodiac, Converter={StaticResource EnumConverter}, Mode=TwoWay}" />
                            </Grid>
                        </Grid>                        
                        <Grid Grid.Column="2">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" Text="Moon In Zodiac" HorizontalOptions="Center" VerticalOptions="Center"/>
                                <Picker Grid.Row="1" x:Name="MoonInZodiacPicker" SelectedItem="{Binding DayAstroEvent.MoonInZodiac, Converter={StaticResource EnumConverter}, Mode=TwoWay}" />
                            </Grid>                            
                        </Grid>                        
                        <CollectionView Grid.Column="3" ItemsSource="{Binding DayAstroEvent.PlanetInZodiacs}" ItemsLayout="HorizontalList">
                                <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <HorizontalStackLayout>
                                        <controls:PlanetInZodiacControl />
                                    </HorizontalStackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                        <Grid Grid.Column="4">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" Text="Moon Trans Time" HorizontalOptions="Center" VerticalOptions="Center"/>
                                <TimePicker Grid.Row="1" Time="{Binding DayAstroEvent.MoonDay.TransitionTime, Converter={StaticResource DateTimeToTimeSpanConverter}, Mode=TwoWay}" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
                            </Grid>
                        </Grid>
                        <Grid Grid.Column="5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" Text="Moon Day" HorizontalOptions="Center" VerticalOptions="Center"/>
                                <Picker Grid.Row="1" x:Name="NewMoonDayPicker" SelectedItem="{Binding DayAstroEvent.MoonDay.NewMoonDay, Converter={StaticResource IntToStringConverter}, Mode=TwoWay}" />
                            </Grid>
                        </Grid>                       
                    </Grid>                    
                    <Grid Grid.Row="2">
                        <Grid>                            
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>                        
                        <Grid Grid.Row="0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0" ColumnDefinitions="*,4*">
                                        <Label Grid.Column="0" Text="Moon In Zodiac Info" HorizontalOptions="Center" VerticalOptions="Center"/>
                                        <Editor Grid.Column="1" Text="{Binding DayAstroEvent.MoonInZodiacInfo}" AutoSize="TextChanges" VerticalOptions="Center" />
                                    </Grid>
                                    <Grid Grid.Column="1" ColumnDefinitions="*,4*">
                                        <Label Grid.Column="0" Text="Day Info" HorizontalOptions="Center" VerticalOptions="Center"/>
                                        <Editor Grid.Column="1" Text="{Binding DayAstroEvent.EventText}" AutoSize="TextChanges" VerticalOptions="Center" />
                                    </Grid>                                                                  
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Button Grid.Row="0" Text="Add Planet Event" Clicked="AddEvent_Clicked"/>
                            <Button Grid.Row="1" Text="Remove Planet Event" Clicked="RemoveEvent_Clicked"/>
                        </Grid>
                        <CollectionView Grid.Column="1" ItemsSource="{Binding DayAstroEvent.PlanetEvents}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <VerticalStackLayout>
                                        <controls:PlanetEventControl />
                                    </VerticalStackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Grid>
                </Grid>
            </Grid>
        </VerticalStackLayout>
    </Border>
</ContentView>
