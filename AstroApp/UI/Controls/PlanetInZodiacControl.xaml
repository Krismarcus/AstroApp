<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AstroApp.UI.Controls.PlanetInZodiacControl" 
             xmlns:converters="clr-namespace:AstroApp.UI.Tools.Converters"
             xmlns:models="clr-namespace:AstroApp.Data.Models"
             x:DataType="models:PlanetInZodiac">
    <ContentView.Resources>
        <converters:EnumToStringConverter x:Key="EnumConverter"/>
    </ContentView.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Text="{Binding Planet}" HorizontalOptions="Center" VerticalOptions="Center"/>
        <Picker Grid.Row="1" x:Name="PlanetInZodiacPicker" SelectedItem="{Binding ZodiacSign, Converter={StaticResource EnumConverter}, Mode=TwoWay}" />
    </Grid>
</ContentView>
